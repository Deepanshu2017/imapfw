    'max_sync_accounts': 7,
}

UI = None

def configure(ui):
    global UI
    UI = ui

def preHook(actionName, actionOptions, hook):
    hook.ended()

def postHook(hook):
    hook.ended()

def exceptionHook(error, hook):
    hook.ended()

