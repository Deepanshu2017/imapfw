from imapfw.api import engines, controllers, types, drivers


MaildirConfA = {
    'path': '~/Maildir',
    'max_connections': 9,
}

ImapConfA = {
    'dns':      'imap.gmail.com',
    'port':     '143',
    'username': 'myname',
    'max_connections': 11,
}

class MaildirA(types.Maildir):
    conf = MaildirConfA
    driver = drivers.Maildir

class ImapA(types.Imap):
    conf = ImapConfA
